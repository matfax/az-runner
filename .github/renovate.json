{
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests"
    ],
    "separateMinorPatch": false,
    "patch": {
        "automerge": true
    },
    "pin": {
        "automerge": true
    },
    "lockFileMaintenance": {
        "automerge": true
    },
    "vulnerabilityAlerts": {
        "automerge": true,
        "labels": ["security"],
        "assignees": ["@matfax"]
    },
    "labels": [
        "dependencies",
        "chore"
    ],
    "ignorePaths": ["caching/*"],
    "commitBody": "Signed-off-by: {{{gitAuthor}}}"
}
